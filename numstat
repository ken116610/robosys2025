import sys

def read_numbers_from_stdin():
    numbers = []
    for line in sys.stdin:
        for token in line.strip().split():
            if token == "":
                continue
            try:
                num = float(token)
            except ValueError:
                print(f"Error: 数値ではない入力があります -> {token}", file=sys.stderr)
                return None
            numbers.append(num)
    return numbers

def main():
    numbers = read_numbers_from_stdin()
    if numbers is None:
        sys.exit(1)

    if len(numbers) == 0:
        print("Error: 入力が空です。数値を標準入力から渡してください。", file=sys.stderr)
        sys.exit(1)

    count = len(numbers)
    total = sum(numbers)
    minimum = min(numbers)
    maximum = max(numbers)
    mean = total / count

    print(f"count {count}")
    print(f"sum {total:.10g}")
    print(f"min {minimum:.10g}")
    print(f"max {maximum:.10g}")
    print(f"mean {mean:.10g}")

if __name__ == "__main__":
    main()


